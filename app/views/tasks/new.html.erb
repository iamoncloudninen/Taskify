<h1>Tasks#new</h1>
<p>Find me in app/views/tasks/new.html.erb</p>

<%= form_for @task do |f| %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    
    <%= f.label :deadline %>
    <%= f.datetime_select :deadline %>
    
    <%= f.label :priority %>
    <%= f.check_box :priority %>
    
    <%= f.label :image %>
    <%= f.file_field :image %>
    
    <%= f.submit %>
  <% end %>
