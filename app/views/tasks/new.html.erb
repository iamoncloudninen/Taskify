<h1>タスク作成</h1>
<div class="task-form">
  <%= form_for @task do |f| %>
    <div class="form-group">
      <%= f.label :content, "タスク内容", class: "form-label" %>
      <%= f.text_field :content, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :deadline, "期限", class: "form-label" %>
      <%= f.datetime_local_field :deadline, class: "form-input", id: "task-deadline" %>
      <div class="form-checkbox">
        <%= check_box_tag :today_only, '1', false, id: "today-only" %>
        <%= label_tag :today_only, "本日中", class: "form-label" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :priority, "優先", class: "form-label" %>
      <%= f.check_box :priority, class: "form-checkbox" %>
    </div>

    <div class="form-actions">
      <%= link_to "ダッシュボードに戻る", dashboard_show_path, class: "ta-btn ta-btn-secondary" %>
      <%= f.submit "タスクを作成する", class: "ta-btn ta-btn-primary" %>
    </div>
  <% end %>
</div>
