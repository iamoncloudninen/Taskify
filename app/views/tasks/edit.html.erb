<h1>タスク編集</h1>
<%= form_for @task do |f| %>
    <%= f.label :内容 %>
    <%= f.text_field :content %>
    
    <%= f.label :期限 %>
    <%= f.datetime_select :deadline %>
    
    <%= f.label :優先 %>
    <%= f.check_box :priority %>
    
    <%= f.submit "タスクを更新する" %>
<% end %>
<%= link_to "ダッシュボードに戻る", dashboard_show_path %>
