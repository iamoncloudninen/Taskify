<h1>タスク編集</h1>
<div class="form">
  <%= form_for @task do |f| %>
    <div class="form-group">
      <%= f.label :content, "タスク内容", class: "form-label" %>
      <p class="necessary">※必須</p>
      <%= f.text_field :content, class: "form-input #{'is-invalid' if @task.errors[:content].any?}" %>
      <% if @task.errors[:content].any? %>
        <div class="error-message">
          <%= @task.errors.full_messages_for(:content).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :deadline, "期限", class: "form-label" %>
      <p class="necessary">※必須</p>
      <%= f.datetime_local_field :deadline, class: "form-input #{'is-invalid' if @task.errors[:deadline].any?}" %>
      <% if @task.errors[:deadline].any? %>
        <div class="error-message">
          <%= @task.errors.full_messages_for(:deadline).join(", ") %>
        </div>
      <% end %>
      <%= label_tag :today_only, "本日中", class: "form-label" %>
      <%= check_box_tag :today_only, '1', false, id: "today-only" %>
    </div>

    <div class="form-group">
      <%= f.label :priority, "優先", class: "form-label" %>
      <%= f.check_box :priority, class: "form-checkbox" %>
    </div>

    <div class="form-actions">
      <%= link_to "戻る", dashboard_show_path, class: "btn btn-secondary" %>
      <%= f.submit "タスクを更新する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
