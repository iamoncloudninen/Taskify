<h1>アカウント設定</h1>
<div class="user-form">
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :username, "ユーザー名", class: "form-label" %>
      <%= f.text_field :username, class: "form-input" %>
    </div>
  
    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.text_field :email, class: "form-input" %>
    </div>
  
    <div class="form-group">
      <%= f.label :profile_image, "プロフィール画像", class: "form-label" %>
      <%= f.file_field :profile_image, class: "form-input" %>
    </div>
    
    <div class="form-actions">
      <%= link_to "戻る", request.referer, class: "u-btn u-btn-secondary" %>
      <%= f.submit "更新する", class: "u-btn u-btn-primary" %>
    </div>
  <% end %>
</div>
