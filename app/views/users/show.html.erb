<h1>マイページ</h1>
<%= attachment_image_tag @user, :profile_image, fallback: "no_image.png" %>
<%= @user.username %>
<%= @user.email %>
<% if @user.id == current_user.id %>
  <%= link_to "編集", edit_user_path(@user) %>
  <%= link_to 'アカウント削除', user_path(@user), method: :delete, data: { confirm: '本当に削除しますか？' } %>
<% end %>
