<h1>新規登録</h1>
<div class="user-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="form-group">
      <%= f.label :username, "ユーザー名", class: "form-label" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>
  
    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password, "パスワード(６文字以上)", class: "form-label" %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password_confirmation, "確認用パスワード", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :profile_image, "プロフィール画像", class: "form-label" %>
      <%= f.file_field :profile_image, class: "form-input" %>
    </div>
  
    <div class="form-actions">
      <%= render "devise/shared/links" %><br>
      <%= f.submit "登録する", class: "u-btn u-btn-primary" %>
    </div>
  <% end %>
</div>
