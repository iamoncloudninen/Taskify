<h1>新規登録</h1>
<div class="form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :username, "ユーザー名", class: "form-label" %>
      <%= f.text_field :username, autofocus: true, class: "form-input #{'is-invalid' if @user.errors[:username].any?}" %>
      <% if @user.errors[:username].any? %>
        <div class="error-message">
          <%= @user.errors.full_messages_for(:username).join(", ") %>
        </div>
      <% end %>
    </div>
  
    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: "form-input #{'is-invalid' if @user.errors[:email].any?}" %>
      <% if @user.errors[:email].any? %>
        <div class="error-message">
          <%= @user.errors.full_messages_for(:email).join(", ") %>
        </div>
      <% end %>
    </div>
  
    <div class="form-group">
      <%= f.label :password, "パスワード(６文字以上)", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input #{'is-invalid' if @user.errors[:password].any?}" %>
      <% if @user.errors[:password].any? %>
        <div class="error-message">
          <%= @user.errors.full_messages_for(:password).join(", ") %>
        </div>
      <% end %>
    </div>
  
    <div class="form-group">
      <%= f.label :password_confirmation, "確認用パスワード", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input #{'is-invalid' if @user.errors[:password_confirmation].any?}" %>
      <% if @user.errors[:password_confirmation].any? %>
        <div class="error-message">
          <%= @user.errors.full_messages_for(:password_confirmation).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :profile_image, "プロフィール画像", class: "form-label" %>
      <%= f.file_field :profile_image, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= render "devise/shared/links" %><br>
      <%= f.submit "登録する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
